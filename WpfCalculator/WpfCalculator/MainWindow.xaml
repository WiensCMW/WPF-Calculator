<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculator"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="525"
        Width="350">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="labelResults"
               Content="0"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Grid.ColumnSpan="4" />

        <!--Row 1 (Results)-->
        <Button x:Name="buttonAC"
                Content="AC"
                Margin="5"
                Grid.Column="0"
                Grid.Row="1" />
        <Button x:Name="buttonNegative"
                Content="+/-"
                Margin="5"
                Grid.Column="1"
                Grid.Row="1" />
        <Button x:Name="buttonPercent"
                Content="%"
                Margin="5"
                Grid.Column="2"
                Grid.Row="1" />
        <Button x:Name="buttonDivide"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Content="/"
                Margin="5"
                Grid.Column="3"
                Grid.Row="1" />

        <!--Row 2-->
        <Button x:Name="button7"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="7"
                Margin="5"
                Grid.Column="0"
                Grid.Row="2" />
        <Button x:Name="button8"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="8"
                Margin="5"
                Grid.Column="1"
                Grid.Row="2" />
        <Button x:Name="button9"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="9"
                Margin="5"
                Grid.Column="2"
                Grid.Row="2" />
        <Button x:Name="buttonMultiply"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Content="*"
                Margin="5"
                Grid.Column="3"
                Grid.Row="2" />

        <!--Row 3-->
        <Button x:Name="button4"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="4"
                Margin="5"
                Grid.Column="0"
                Grid.Row="3" />
        <Button x:Name="button5"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="5"
                Margin="5"
                Grid.Column="1"
                Grid.Row="3" />
        <Button x:Name="button6"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="6"
                Margin="5"
                Grid.Column="2"
                Grid.Row="3" />
        <Button x:Name="buttonMinus"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Content="-"
                Margin="5"
                Grid.Column="3"
                Grid.Row="3" />

        <!--Row 4-->
        <Button x:Name="button1"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="1"
                Margin="5"
                Grid.Column="0"
                Grid.Row="4" />
        <Button x:Name="button2"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="2"
                Margin="5"
                Grid.Column="1"
                Grid.Row="4" />
        <Button x:Name="button3"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="3"
                Margin="5"
                Grid.Column="2"
                Grid.Row="4" />
        <Button x:Name="buttonPlus"
                Click="OperationButton_Click"
                Background="{StaticResource operatorsColor}"
                Content="+"
                Margin="5"
                Grid.Column="3"
                Grid.Row="4" />

        <!--Row 5-->
        <Button x:Name="button0"
                Click="NumberButton_Click"
                Background="{StaticResource numbersColor}"
                Content="0"
                Margin="5"
                Grid.ColumnSpan="2"
                Grid.Row="5" />
        <Button x:Name="buttonPeriod"
                Click="ButtonPeriod_Click"
                Background="{StaticResource numbersColor}"
                Content="."
                Margin="5"
                Grid.Column="2"
                Grid.Row="5" />
        <Button x:Name="buttonEquals"
                Background="{StaticResource operatorsColor}"
                Content="="
                Margin="5"
                Grid.Column="3"
                Grid.Row="5" />
    </Grid>
</Window>
